// manifest.json
{
  "manifest_version": 3,
  "name": "Privacy Policy Extractor",
  "version": "1.0",
  "description": "Extracts the privacy policy text from the current website.",
  "permissions": ["tabs", "activeTab", "storage", "scripting"],
    "host_permissions": [
    "http://localhost:3000/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "peekaboo1.png",
      "48": "peekaboo1.png",
      "128": "peekaboo1.png"
    }
  },
  "icons": {
    "16": "peekaboo1.png",
    "48": "peekaboo1.png",
    "128": "peekaboo1.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}

